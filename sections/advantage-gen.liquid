{% javascript %}
$('.slider_advant').slick({
    dots: false,
    infinite: true,
    speed: 300,
    slidesToShow: 3,
    slidesToScroll: 1,
    autoplay: false,
    autoplaySpeed: 2000,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
          infinite: true,
          dots: true
        }
      },
      {
        breakpoint: 600,
        settings: { 
          slidesToShow: 1,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          autoplay: false,
          prevArrow:"<button type='button' class='slick-prev pull-left'><img src='https://cdn.shopify.com/s/files/1/0619/0039/0599/files/arrow.png?v=1659446325'></button>",
          nextArrow:"<button type='button' class='slick-next pull-right'><img src='https://cdn.shopify.com/s/files/1/0619/0039/0599/files/arrow.png?v=1659446325'></button>",
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
  });
{% endjavascript %}


<style>
 #advantageGen {
    background-color: #fbf2f2;
    background-image: url('https://cdn.shopify.com/s/files/1/0619/0039/0599/files/pattern.png?v=1659453596');
    padding: 10em 0;
    position: relative;
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
}

/* // `sm` applies to x-small devices (portrait phones, less than 576px) */
@media (max-width: 575.98px) {
  #advantageGen { background-image: url('https://cdn.shopify.com/s/files/1/0619/0039/0599/files/pattern-min.png?v=1659454104');}
}

</style>

{% if section.blocks.size > 0 %}
<section class="page-section" id="advantageGen">
    <div class="bgdark">
    <div class="container">
        <div class="row text-center advantTitle">
            <div class="col-12">
                <h3>WHAT SETS US APART</h3>
                <p>The Genesis Advantages</p>
            </div>
        </div>
        <!--  -->
        <div class="row text-center">
          <div class="col-12">
              <div class="slider_advant apart" data-slick="{" autoplay ": {{ section.settings.carousel_autoplay }}, "autoplaySpeed ": {{ section.settings.autoplay_speed }}, "dots ": {{ section.settings.carousel_dots }}, "arrows ": {{ section.settings.carousel_arrows }}"> 
                {% for block in section.blocks %} 
                <a href="{{block.settings.slide_link}}" target="_blank">
                  <div class="card border-0 bg-transparent">
                    <div class="card-body py-0">
                      <img src="{{ block.settings.slide_img | img_url: 'original' }}" alt="diamond" class="slider_img m-auto img-fluid">
                      <h5 class="card-title mb-0">{{ block.settings.slide_title }}</h5>
                    </div>
                  </div>
                </a> 
            {% endfor %}
              </div>
           </div>
         </div>
        <!--  -->
        <div class="row text-center apartCaption justify-content-center mt-5">
            <div class="col-lg-8">
                <p class="text-white">Genesis was founded on the philosophy that our customerâ€™s needs come first. Therefore we offer our diamond jewely at more affordable prices, cutting out middle man markups and offering the best customer service, warranties and benefits in the industry.</p>
                <h4>Always</h4>
                <h5>LEARN MORE ABOUT GENESIS ></h5>
            </div>
        </div>
    </div>
</div>
</section>
{% endif %}

{% schema %}
{
"name": "Advantage",
"max_blocks": 3,
"settings": [
  {
    "type":"header",
    "content":"Carousel option"
  },
  {
    "type": "checkbox",
    "id": "carousel_autoplay",
    "label": "Enable autoplay",
    "default": false
  },
  {
    "type": "checkbox",
    "id": "carousel_dots",
    "label": "Enable dots",
    "default": false
  },
  {
    "type": "checkbox",
    "id": "carousel_arrows",
    "label": "Enable arrows",
    "default": false
  },
  {
    "type": "select",
    "id": "autoplay_speed",
    "label": "Change slides every",
      "options": [
      { "value": "1000", "label": "1 seconds" },
      { "value": "2000", "label": "2 seconds" },
      { "value": "3000", "label": "3 seconds" },
      { "value": "4000", "label": "4 seconds" },
      { "value": "5000", "label": "5 seconds" },
      { "value": "6000", "label": "6 seconds" },
      { "value": "7000", "label": "7 seconds" },
      { "value": "8000", "label": "8 seconds" },
      { "value": "9000", "label": "9 seconds" },
      { "value": "10000", "label": "10 seconds" }
    ],
    "default": "7000"
  }
],
"blocks": [
  {
  "type": "slide",
  "name": "Slide",
  "settings": [
        {
          "type": "url",
          "id": "slide_link",
          "label": "Slide link"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Slider title"
        },
        {
          "type": "image_picker",
          "id": "slide_img",
          "label": "Add img for slide"
        }
      ]
    }
  ],
  "presets": [
  {
    "name": "advantage Slider"
  }
]
}
{% endschema %}
