{% if section.blocks.size > 0 %}
<section class="page-section bg-peach" id="involved">
    <div class="container">
        <div class="row text-center justify-content-center align-items-center mb-5 involveTitle">
            <div class="col-lg-9">
                <div class="mainTitle"><h3>GENESIS GETS INVOLVED</h3></div>
                <h4>WE ARE PROUD TO BE THE OFFICIAL JEWELERS OF</h4>
            </div>
        </div>
        <div class="row g-4 text-center involveIcon justify-content-center align-items-center">
